{
	"name": "@brikcss/flipper",
	"version": "0.4.4",
	"description": "Flipper is a front end web module that flips things. In style. Flipper can flip an element in place or open it up to a modal dialog.",
	"keywords": [
		"flipper",
		"brikcss",
		"front end library",
		"css",
		"js",
		"modal",
		"dialog",
		"popup",
		"flip card",
		"component",
		"module"
	],
	"main": "dist/flipper-vanilla.js",
	"module": "src/js/vanilla/flipper.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"// [DEV]": "// For local development, watches files and builds them when they change. NOTE: Does not run any production tasks, such as minifying files.",
		"predev": "run-p css:dev examples:dev",
		"dev": "run-p js:watch sass:watch css:watch examples:watch dev:serve",
		"dev:serve": "browser-sync start --config .browsersync.js",
		"// [BUILD]": "// Builds files for distribution, including both development and production tasks.",
		"prebuild": "npm run build:clean",
		"build": "cross-env NODE_ENV=production run-p js:build sass:build css:build examples:build",
		"build:clean": "rimraf dist/css/* dist/js/angularjs/* dist/js/vanilla/*",
		"// [JS]": "// Builds all JS flavors with webpack.",
		"prejs:build": "npm run js:dev",
		"js:build": "cross-env NODE_ENV=production parallel-webpack",
		"js:dev": "cross-env NODE_ENV=dev parallel-webpack --no-stats",
		"js:watch": "npm run js:dev -- --watch",
		"// [SASS]": "// Watches SASS src files and symlinks src to dist folder.",
		"sass:build": "ln -sf ../src/sass/ ./dist/sass",
		"sass:watch": "chokidar src/sass/flipper.scss -c 'run-p css:dev examples:dev'",
		"// [CSS]": "// Builds vanilla CSS files from the SASS src files.",
		"precss:build": "npm run css:dev",
		"css:build": "csso dist/css/flipper-vanilla.css --output dist/css/flipper-vanilla.min.css",
		"css:dev": "node-sass src/sass/_flipper-init.scss dist/css/flipper-vanilla.css --output-style=expanded --indent-type=tab --indent-width=1",
		"css:watch": "chokidar src/sass/_flipper-init.scss -c 'run-p css:dev examples:dev'",
		"// [EXAMPLES]": "// Watches `examples` for development.",
		"examples:build": "npm run examples:dev",
		"examples:dev": "node-sass examples/main.scss examples/flipper-sass.css --output-style=expanded --indent-type=tab --indent-width=1",
		"examples:watch": "chokidar examples/main.scss -c 'npm run examples:dev'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/brikcss/flipper.git"
	},
	"author": "The Zimmee <thezimmee@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/brikcss/flipper/issues"
	},
	"homepage": "https://github.com/brikcss/flipper#readme",
	"devDependencies": {
		"autoprefixer": "^7.1.4",
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.0",
		"babel-eslint": "^8.0.1",
		"babel-loader": "^7.1.2",
		"babel-plugin-add-module-exports": "^0.2.1",
		"babel-polyfill": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"babel-preset-es2015": "^6.24.1",
		"browser-sync": "^2.18.13",
		"chokidar-cli": "^1.2.0",
		"cross-env": "^5.1.1",
		"csso-cli": "^1.1.0",
		"eslint": "^4.9.0",
		"eslint-loader": "^1.9.0",
		"node-sass": "^4.5.3",
		"npm-run-all": "^4.1.1",
		"parallel-webpack": "^2.2.0",
		"postcss": "^6.0.12",
		"postcss-scss": "^1.0.2",
		"rimraf": "^2.6.2",
		"webpack": "^3.8.1"
	}
}
